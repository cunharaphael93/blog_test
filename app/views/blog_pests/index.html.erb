<h1>My Blog</h1>

<%= link_to "Create", new_blog_pest_path(@blog_pest) if user_signed_in?%>

<% @blog_pests.each do |blog_pest| %>
   
   <div>

        <% if blog_pest.draft? %>
            <div class = "p-2 rounded bg-gray-100 text-gray-900"><h2><%= link_to blog_pest.title, blog_pest%></h2>Draft</div>
        <% elsif blog_pest.scheduled?%>
            <div class = "p-2 rounded bg-blue-100 text-blue-900"><h2><%= link_to blog_pest.title, blog_pest%></h2>Scheduled</div>
            <h2><%= link_to blog_pest.title, blog_pest%></h2>
        <% else %>
            <h2><%= link_to blog_pest.title, blog_pest%></h2>
        <% end %>

        <%= blog_pest.body%>

    </div>

<% end %>
